#include <iostream>
using namespace std;
struct Record {
    int roll;
    string fullname;
    int years;
    float score;
};
const int COUNT = 10;
Record book[COUNT];
bool slot[COUNT] = {false};
int indexer(int roll) { return roll % COUNT; }
void insertRecord() {
    int roll, years; float score; string fullname;
    cout << "Provide Roll: "; cin >> roll;
    int loc = indexer(roll), j = loc;
    do {
        if (!slot[j]) {
            book[j].roll = roll;
            cout << "Provide Name: "; cin >> fullname;
            cout << "Provide Age: "; cin >> years;
            cout << "Provide Marks: "; cin >> score;
            book[j].fullname = fullname;
            book[j].years = years;
            book[j].score = score;
            slot[j] = true;
            cout << "Entry stored.\n"; return;
        }
        j = (j + 1) % COUNT;
    } while (j != loc);
    cout << "Storage full.\n";
}
void findRecord() {
    int roll; cout << "Provide Roll: "; cin >> roll;
    int loc = indexer(roll), j = loc;
    do {
        if (slot[j] && book[j].roll == roll) {
            cout << "Roll: " << book[j].roll
                << ", Name: " << book[j].fullname
                << ", Age: " << book[j].years
                << ", Marks: " << book[j].score << endl;
            return;
        }
        j = (j + 1) % COUNT;
    } while (j != loc);
    cout << "Entry not present.\n";
}
void printAll() {
    cout << "--- List ---\n";
    for (int i = 0; i < COUNT; i++)
        if (slot[i])
            cout << "Roll: " << book[i].roll
                << ", Name: " << book[i].fullname
                << ", Age: " << book[i].years
                << ", Marks: " << book[i].score << endl;
}
int main() {
    int pick;
    do {
        cout << "\n1.Insert\n2.Search\n3.List\n4.Quit\nChoose: ";
        cin >> pick;
        if (pick == 1) insertRecord();
        else if (pick == 2) findRecord();
        else if (pick == 3) printAll();
        else if (pick == 4) cout << "See you!\n";
        else cout << "Not valid.\n";
    } while (pick != 4);
    return 0;
}
